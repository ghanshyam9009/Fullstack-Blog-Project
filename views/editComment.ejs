<%- include('partials/header', { title: 'Edit Comment', user: user }) %>

<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">Edit Comment</h2>
    </div>
    <div class="card-body">
      <form action="/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="mb-3">
          <label for="content" class="form-label">Comment Content</label>
          <textarea
            name="content"
            id="content"
            class="form-control"
            rows="4"
            required
          ><%= comment.content %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save"></i> Update Comment
        </button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
